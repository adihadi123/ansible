#cloud-config
users:
  - name: {{ vm_user }}
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    ssh_authorized_keys:
      - {{ ssh_pubkey }}

ssh_pwauth: false
disable_root: true

package_update: true
package_upgrade: false
packages:
  - openssh-server
  - qemu-guest-agent
  - python3

runcmd:
  - systemctl enable --now ssh || true
  - systemctl restart ssh || true
  - systemctl enable --now qemu-guest-agent || true
  - netplan apply || true
